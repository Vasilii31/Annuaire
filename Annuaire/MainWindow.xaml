<Window x:Class="Annuaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Annuaire"
        xmlns:Views="clr-namespace:Annuaire.View"
        WindowStyle="SingleBorderWindow"
        WindowState = "Maximized"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Chocolate">
           <TextBlock Text="Annuaire" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="5"></TextBlock> 
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
        <!--<Views:AccueilView Grid.Row="1"/>--> 



    </Grid>
</Window>
